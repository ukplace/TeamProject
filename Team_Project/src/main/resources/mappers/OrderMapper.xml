<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="com.itwillbs.mapper.OrderMapper">
	
	<!-- 주문상품정보 -->
	<select id="getProductInfo" resultType="com.itwillbs.domain.OrderPageItemDTO">
		select p_num, p_name, o_price, o_discount
		from order_product where p_num=#{p_num}
	</select>

</mapper>